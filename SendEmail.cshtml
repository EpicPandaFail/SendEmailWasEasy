<div class="contact-form">
						<form id="contact-form" method="POST" role="form">
							<div class="form-group wow fadeInLeft animated" data-wow-duration="500ms" data-wow-delay=".6s">
								<input type="text" placeholder="Your Name" class="form-control" name="name" id="name">
								<div class="form-field-error">
									<p class="field-error" id="name-empty">
										@(culture == "en-CA" ? Web237Clean.Ressources.Global.FormNameEmpty : Web237Clean.Ressources.GlobalFr.FormNameEmpty)
									</p>
									<p class="field-error" id="name-invalid">
										@(culture == "en-CA" ? Web237Clean.Ressources.Global.FormNameInvalid : Web237Clean.Ressources.GlobalFr.FormNameInvalid)
									</p>
								</div>
							</div>
							<br>
							<div class="form-group wow fadeInLeft animated" data-wow-duration="500ms" data-wow-delay=".8s">
								<input type="email" placeholder="Your Email" class="form-control" name="email" id="email">
								<div class="form-field-error">
									<p class="field-error" id="email-empty">
										@(culture == "en-CA" ? Web237Clean.Ressources.Global.FormEmailEmpty : Web237Clean.Ressources.GlobalFr.FormEmailEmpty)
									</p>
									<p class="field-error" id="email-invalid">
										@(culture == "en-CA" ? Web237Clean.Ressources.Global.FormEmailInvalid : Web237Clean.Ressources.GlobalFr.FormEmailInvalid)
									</p>
								</div>
							</div>
							<br>
							<div class="form-group wow fadeInLeft animated" data-wow-duration="500ms" data-wow-delay="1s">
								<input type="text" placeholder="Subject" class="form-control" name="subject" id="subject">
								<div class="form-field-error">
									<p class="field-error" id="subject-empty">
										@(culture == "en-CA" ? Web237Clean.Ressources.Global.FormSubjectEmpty : Web237Clean.Ressources.GlobalFr.FormSubjectEmpty)
									</p>
									<p class="field-error" id="subject-invalid">
										@(culture == "en-CA" ? Web237Clean.Ressources.Global.FormSubjectInvalid : Web237Clean.Ressources.GlobalFr.FormSubjectInvalid)
									</p>
								</div>
							</div>
							<br>
							<div class="form-group wow fadeInLeft animated" data-wow-duration="500ms" data-wow-delay="1.2s">
								<textarea rows="6" placeholder="Message" class="form-control" name="message" id="message"></textarea>
								<div class="form-field-error">
									<p class="field-error" id="message-empty">
										@(culture == "en-CA" ? Web237Clean.Ressources.Global.FormMessageEmpty : Web237Clean.Ressources.GlobalFr.FormMessageEmpty)
									</p>
									<p class="field-error" id="message-invalid">
										@(culture == "en-CA" ? Web237Clean.Ressources.Global.FormMessageInvalid : Web237Clean.Ressources.GlobalFr.FormMessageInvalid)
									</p>
								</div>
							</div>
							<br>
							<div id="success" class="success">
								@(culture == "en-CA" ? Web237Clean.Ressources.Global.ContactSuccess : Web237Clean.Ressources.GlobalFr.ContactSuccess)
							</div>
							<div id="error" class="error">
								@(culture == "en-CA" ? Web237Clean.Ressources.Global.ContactError : Web237Clean.Ressources.GlobalFr.ContactError)
							</div>
							<input id="RequestVerificationToken" type="hidden" value="@requestToken" />
							<div id="submit" class="wow fadeInDown fadeInLeft animated" data-wow-duration="500ms" data-wow-delay="1.4s">
								<button type="submit" id="contact-submit" class="btn btn-default btn-send hvr-bounce-to-right">
									@(culture == "en-CA" ? Web237Clean.Ressources.Global.ContactBtn : Web237Clean.Ressources.GlobalFr.ContactBtn)
								</button>
							</div>
							<div id="recaptcha-text" class="grecaptcha-text wow fadeInDown fadeInLeft animated" data-wow-duration="500ms" data-wow-delay="1.4s">
								<small>
									This site is protected by reCAPTCHA and the Google
									<a href="https://policies.google.com/privacy">Privacy Policy</a> and
									<a href="https://policies.google.com/terms">Terms of Service</a> apply.
								</small>
							</div>
						</form>
					</div>
